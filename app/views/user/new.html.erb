<h1>Create a new User</h1>

<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>
  
  
  <% if false %>
  <ul>
    <%= f.fields_for :users do |user_form| %>
    <li>
      <%= user_form.label :name %>
      <%= user_form.text_field :name %>
    </li>
    <% end %>
  </ul>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
