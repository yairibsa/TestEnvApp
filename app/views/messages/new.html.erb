<h1>Create a new Message</h1>

<%= form_for(@messages) do |f| %>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  
  <div class="field">
    <%= f.label :active %>
    <%= f.text_field :active %>
  </div>
  
  <div class="field">
    <%= f.label :user_id %>
    <%= f.select :user_id, [[ "Hugo", "1"], ["Yair", "2"], ["Panchito", "3"], ["Juan", "5"], ["Francisco", "6"]] %>
    <%#<%= f.number_field :user_id %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', messages_path %>