<h1>Users</h1>
<%= link_to "View Users", users_path %>

<h1>Messages</h1>

<%= link_to "Create a new Message", new_message_path %>



<% @messages.each do |message| %>
    <p><%= link_to message.body, message_show_path(message) %></p>
    <p><%= message.active %></p>
    <p><%= link_to message.user.name, user_show_path(message.user) if message.user_id? %></p> <%#message_user_path  %> 
    <%= link_to "Edit", edit_message_path(message.id) %>
    <%= link_to 'Delete Message', message_path(message), method: :delete, data: { confirm: 'Are you sure?' } %>
   
<% end %>

