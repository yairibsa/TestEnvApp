<%= form_for(@portfolio_item) do |f| %>
  <% if @portfolio_item.errors.any? %>
   <% @portfolio_item.errors.full_messages.each do |error| %>
     <%= js add_gritter(error, title: "Hugo IbaÃ±ez Portfolio", sticky: false) %> 
   <% end %>
  <% end %>
  
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <label class="btn btn-primary">
          Upload a main image file <%= f.file_field :main_image, style: 'dispaly:none;' %>
        </label>
      </div>
      
      <div class="form-group">
        <label class="btn btn-primary">
          Upload a thumb image file <%= f.file_field :thumb_image, style: 'dispaly:none;' %>
        </label>
      </div>
    </div>
  
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: 10 %>
      </div>
    </div>
  </div>
  
  <hr>
  
  <div class="col-md-12">
    <h3>Technologies Used:</h3>
    <div>
      <%= f.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
      <% end %>
      <div>
        <%= link_to_add_association 'Add Technology', f, :technologies %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Save Portfolio", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>