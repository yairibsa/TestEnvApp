<div class="app-card-container">
    <div class="card">
        <h1>About Me</h1>
        <hr>
        
        <div class="row">
            <div class="col-md-4">
                <%= image_tag "profile.jpg", width:150, alt: "profile image", class: 'profile-img' %>
                
                <div class="skills">
                    <% @skills.each do |skill| %>
                    <div class="skill">
                       <h4><%= skill.title %></h4>
                        <div class="progress">
                            <div 
                                class="progress-bar progress-bar-striped bg-warning"
                                role="progressbar"
                                aria-valuenow="<%= skill.percent_utilized %>"
                                aria-valuemax="100"
                                style="width: <%= skill.percent_utilized %>%"
                                ></div>
                        </div> 
                    </div>
                        
                    <% end %>
                </div>
            </div>
            
            <div class="col-md-8">
                <p>I am Computer Systems Engineer graduated from Instituto Tecnologico Superior de Poza Rica</p>
                
                <p>
                    <button
                     class="btn btn-primary"
                     type="button"
                     data-toggle="collapse"
                     data-target="#jobHistory"
                     aria-expanded="false"
                     aria-controler="jobHistory"
                    >
                        Job History
                    </button>
                    
                    <button
                     class="btn btn-primary"
                     type="button"
                     data-toggle="collapse"
                     data-target="#education"
                     aria-expanded="false"
                     aria-controler="education"
                    >
                        Education
                    </button>
                </p>
                
                <p>
                    <div class="collapse" id="jobHistory">
                        <div class="card card-block">
                            Web Designer 
                        </div>
                        <div class="card card-block">
                            Software Developer
                        </div>
                    </div>
                    
                    <div class="collapse" id="education">
                        <div class="card card-block">
                            Cecytev Papantla
                        </div>
                        <div class="card card-block">
                            Instituto Tecnologico Superior de Poza Rica
                        </div>
                        <!--<div class="card card-block">
                            School 3
                        </div>-->
                    </div>
                </p>
            </div>
        </div>
    </div>
</div>




